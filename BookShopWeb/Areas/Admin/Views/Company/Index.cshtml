@* @model List<Product> *@

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">
					Company List
				</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="container">
			<div class="row pb-3">
				<div class="col-6">
				</div>
				<div class="col-6 text-end">
					<a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
						<i class="bi bi-plus-circle"></i> Create New Company
					</a>
				</div>
			</div>

			<table id="tableData" class="table table-bordered table-striped bg-primary" style="width:100%">
				<thead>
					<tr>
						<th class="bg-primary text-light">
							Name
						</th>
						<th class="bg-primary text-light">
							StreetAdress
						</th>
						<th class="bg-primary text-light">
							City
						</th>
						<th class="bg-primary text-light">
							State
						</th>
						<th class="bg-primary text-light">
							PostalCode
						</th>
						<th class="bg-primary text-light">
							PhoneNumber
						</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/company.js"></script>
}