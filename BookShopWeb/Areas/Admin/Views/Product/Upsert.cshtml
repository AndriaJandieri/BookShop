@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.Company.Id != 0 ? "Update" : "Create") Company
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Company.Id" hidden />
            <input asp-for="Company.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating py-2 col-12">

                            <input asp-for="Company.Id" class="ms-2"></label>
                            <span asp-validation-for="Company.Title" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <textarea asp-for="Company.Description" class="form-control border-0 shadow"></textarea>
                            <label asp-for="Company.Description" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Company.ISBN" class="form-control border-0 shadow" />
                            <label asp-for="Company.ISBN" class="ms-2"></label>
                            <span asp-validation-for="Company.ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Company.Author" class="form-control border-0 shadow" />
                            <label asp-for="Company.Author" class="ms-2"></label>
                            <span asp-validation-for="Company.Author" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Company.ListPrice" class="form-control border-0 shadow" />
                            <label asp-for="Company.ListPrice" class="ms-2"></label>
                            <span asp-validation-for="Company.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Company.Price" class="form-control border-0 shadow" />
                            <label asp-for="Company.Price" class="ms-2"></label>
                            <span asp-validation-for="Company.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Company.Price50" class="form-control border-0 shadow" />
                            <label asp-for="Company.Price50" class="ms-2"></label>
                            <span asp-validation-for="Company.Price50" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Company.Price100" class="form-control border-0 shadow" />
                            <label asp-for="Company.Price100" class="ms-2"></label>
                            <span asp-validation-for="Company.Price100" class="text-danger"></span>
                        </div>                      

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">

                                @if (Model.Company.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary form-control">
                                    Back To List
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



